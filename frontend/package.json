{
  "name": "bluemoxon-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:validate": "node scripts/validate-cognito-config.js && vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit",
    "bundle:analyze": "vite build && open stats.html"
  },
  "dependencies": {
    "@aws-amplify/ui-vue": "^4.3.7",
    "@types/dompurify": "^3.2.0",
    "aws-amplify": "^6.15.9",
    "axios": "^1.6.0",
    "chart.js": "^4.5.1",
    "dompurify": "^3.3.1",
    "markdown-it": "^14.0.0",
    "marked": "^17.0.1",
    "pinia": "^3.0.4",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.3",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@tsconfig/node18": "^18.2.2",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.10.2",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^27.3.0",
    "postcss": "^8.4.32",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.1.8"
  }
}
